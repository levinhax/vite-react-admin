import './index.less'

import React, { useEffect, useState } from 'react'

function ComBasic() {
  const [msg, setMsg] = useState('hello')

  useEffect(() => {
    setMsg(`hello: ${import.meta.env.VITE_APP_TITLE}`)
  }, [])

  return (
    <div className="{{lowerCase name}}-component-wrapper">
      <h1>{{upperCase name}} 基础组件</h1>
      <h2>{msg}</h2>
    </div>
  )
}

export default ComBasic
